@model Produto
@{ Layout = "_Layout"; ViewBag.Title = "Add um Produto";}

<form asp-action="AddProduto" method="post" class="bg-light" style="padding:15px; border-radius:15px">
    <h2>Cadastrar um Produto </h2>
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input class="form-control" name="Nome" />
    </div>
    <div class="form-group">
        <label for="Preco">Preço:</label>
        <input class="form-control" name="Preco" />
    </div>
    <div class="form-group">
        <label for="Status">Status:</label>
        <input type="hidden" name="Status" value="0" />
        <input type="checkbox" name="Status" value="1" />
    </div>
    <div class="form-group">
        <label for="IdUsuarioCadastro">Id Usuario:</label>
        <input class="form-control" name="IdUsuarioCadastro" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Adicionar</button>
    </div>
</form>